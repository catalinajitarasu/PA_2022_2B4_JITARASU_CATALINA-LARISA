<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="persistenceUnit">
        <class>App.Entities.CitiesEntity</class>
        <class>App.Entities.ContinentsEntity</class>
        <class>App.Entities.CountriesEntity</class>

        <properties>
            <property name="eclipselink.jdbc.url" value="jdbc:oracle:thin:@localhost:1521:XE"/>
            <property name="eclipselink.jdbc.driver" value="oracle.jdbc.OracleDriver"/>
            <property name="javax.persistence.jdbc.user" value="student"/>
            <property name="javax.persistence.jdbc.password"
                      value="STUDENT"/>
        </properties>
    </persistence-unit>

</persistence>
